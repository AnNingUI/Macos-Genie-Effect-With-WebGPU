{
	// ...
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"lib": ["es2020", "dom", "dom.iterable"],
		"types": ["@webgpu/types"],
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src/**/*"]
}